# Puerto del servidor Socket.IO
PORT=3000

# Dominio de producción
DOMAIN=syatortillerias.com.mx

# Modo de producción
NODE_ENV=production

# Database (Configurar en Render Dashboard > Environment)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE

# JWT Secret (Generar uno seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
